services:
  db:
    environment:
      ACCEPT_EULA: "Y"
      MSSQL_SA_PASSWORD: Admin123!
    image: mcr.microsoft.com/mssql/server:2022-latest
    ports:
    - published: 1433
      target: 1433
  forums:
    build:
      context: D:\Forums.API
      dockerfile: Forums/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: Forums
      target: base
    container_name: Forums
    depends_on:
      db:
        condition: service_started
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      ASPNETCORE_URLS: http://+:80
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: ''
    image: forums:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages  "/app/bin/Debug/net6.0/Forums.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - published: 5000
      target: 80
    - target: 80
    tty: true
    volumes:
    - D:\Forums.API\Forums:/app:rw
    - C:\Users\goert\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\goert\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\goert\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Users\goert\.nuget\packages:/root/.nuget/packages:ro
    - D:\Forums.API:/src:rw
version: '3.4'